<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:sbid._VM;assembly=sbid"
        Width="240" Height="75" WindowStartupLocation="CenterOwner"
        x:Class="sbid._V.LogicRelation_EW_V"
        Title="编辑逻辑关系">
  <Design.DataContext>
    <vm:LogicRelation_EW_VM/>
  </Design.DataContext>

  <StackPanel Margin="10">
    <TextBlock Text="选择逻辑关系：" FontSize="17"/>
    <ComboBox Name="logicRelation_ComboBox" SelectedItem="{Binding LogicRelation_VM.LogicRelation}" Height="25"/>
  </StackPanel>
</Window>
