<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:sbid._VM;assembly=sbid"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="sbid._V.ClassDiagram_P_V">
  
  <Design.DataContext>
    <vm:ClassDiagram_P_VM/>
  </Design.DataContext>
  
  <DockPanel>
    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Background="LightGray">
      <Button>创建UserType</Button>
      <Button>创建Process</Button>
      <Button>创建Axiom</Button>
      <Button>创建Initial Knowledge</Button>
      <Button>创建Safety Property</Button>
      <Button>创建Security Property</Button>
    </StackPanel>
    <Canvas DockPanel.Dock="Bottom">
      <ItemsControl Items="{Binding UserTypeVMs}"/>
      
      <Canvas.DataTemplates>
        <DataTemplate DataType="{x:Type vm:UserType_VM}">
          <Grid Width="220" Height="200" Canvas.Left="100" Canvas.Top="100" Background="AliceBlue">

          </Grid>
        </DataTemplate>
      </Canvas.DataTemplates>
    </Canvas>
  </DockPanel>
</UserControl>
