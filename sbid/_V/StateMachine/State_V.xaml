<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:v="clr-namespace:sbid._V;assembly=sbid"
             Height="58" Width="107"
             x:Class="sbid._V.State_V">
  <Grid Width="100" Height="50">
    <Rectangle Stroke="Black" Fill="White" StrokeThickness="2"/>
    <Grid Margin="-8" ColumnDefinitions="1*,70,1*" RowDefinitions="1*,24,1*">
      <TextBlock Text="状态名" Grid.Row="1" Grid.Column="1" FontSize="16" TextAlignment="Center"/>
      <v:Connector_V DataContext="{Binding Connectors[0]}" Grid.Row="0" Grid.Column="0"/>
      <v:Connector_V DataContext="{Binding Connectors[1]}" Grid.Row="0" Grid.Column="1"/>
      <v:Connector_V DataContext="{Binding Connectors[2]}" Grid.Row="0" Grid.Column="2"/>
      <v:Connector_V DataContext="{Binding Connectors[3]}" Grid.Row="2" Grid.Column="0"/>
      <v:Connector_V DataContext="{Binding Connectors[4]}" Grid.Row="2" Grid.Column="1"/>
      <v:Connector_V DataContext="{Binding Connectors[5]}" Grid.Row="2" Grid.Column="2"/>
    </Grid>
  </Grid>
</UserControl>
